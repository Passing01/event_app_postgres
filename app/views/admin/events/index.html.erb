<h1>Admin::Events#index</h1>
<p>Find me in app/views/admin/events/index.html.erb</p>
<h1>Événements</h1>
<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td>
          <%= link_to 'Voir', [:admin, event] %>
          <%= link_to 'Modifier', edit_admin_event_path(event) %>
          <%= link_to 'Supprimer', [:admin, event], method: :delete, data: { confirm: 'Êtes-vous sûr?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
