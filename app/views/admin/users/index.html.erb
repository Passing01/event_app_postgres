<h1>Admin::Users#index</h1>
<p>Find me in app/views/admin/users/index.html.erb</p>
<h1>Utilisateurs</h1>
<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Voir', [:admin, user] %>
          <%= link_to 'Modifier', edit_admin_user_path(user) %>
          <%= link_to 'Supprimer', [:admin, user], method: :delete, data: { confirm: 'Êtes-vous sûr?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
